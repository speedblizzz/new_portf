.social a:hover:after {
  -webkit-transform: scale(1);
  -moz-transform: scale(1);
  -ms-transform: scale(1);
  -o-transform: scale(1);
  transform: scale(1);
  opacity: 1;
}
.social ul {
  padding: 0;
  margin: 0;
  list-style: none;
  line-height: inherit;
  display: inline-block;
}
.social ul li {
  display: inline-block;
  margin-left: 15px;
}
.social ul li + li {
  margin-left: 15px;
}