.overlay
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  background-color: #222;
  opacity: 0;
  visibility: hidden;
  transition: visibility 0.01s linear 0.2s, opacity 0.2s linear 0s;

.menu-is-opened .overlay {
  visibility: visible;
  opacity: 0.6;
  -webkit-transition-delay: 0s, 0s;
  -moz-transition-delay: 0s, 0s;
  transition-delay: 0s, 0s;
  z-index: 99;
}


.footer {
  position: relative;
  display: block;
  padding: 50px 0;
  background: #f5f5f5;
  font-size: 14px;
}
@media (max-width: 999px) {
  .footer {
    padding: 30px 0;
  }
}
.footer a {
  display: inline-block;
  position: relative;
}
.footer .row {
  display: block;
}
.footer .site-info,
.footer .social {
  display: inline-block;
  width: 48%;
  vertical-align: top;
}
@media (max-width: 999px) {
  .footer .site-info,
  .footer .social {
    width: 100%;
    text-align: center;
  }
}
.footer .social {
  float: right;
  text-align: right;
}
@media (max-width: 999px) {
  .footer .social {
    float: none;
    text-align: center;
  }
}
.footer .site-info {
  float: left;
}
@media (max-width: 999px) {
  .footer .site-info {
    float: none;
    margin-bottom: 10px;
  }
}
.footer .site-info a {
  color: #444;
}
.footer .site-info a:after {
  content: '';
  position: absolute;
  top: 0px;
  border-bottom: 1px solid;
  border-color: #0097A7;
  left: 0;
  right: 0;
  opacity: 0;
  -webkit-transition: -webkit-transform 0.2s cubic-bezier(0.4, 0, 0.21, 1.1), opacity 0.2s cubic-bezier(0.4, 0, 0.21, 1.1);
  -moz-transition: -moz-transform 0.2s cubic-bezier(0.4, 0, 0.21, 1.1), opacity 0.2s cubic-bezier(0.4, 0, 0.21, 1.1);
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.21, 1.1), opacity 0.2s cubic-bezier(0.4, 0, 0.21, 1.1);
  -webkit-transform: scale(0);
  -moz-transform: scale(0);
  -ms-transform: scale(0);
  -o-transform: scale(0);
  transform: scale(0);
}
.footer .site-info a:hover {
  color: #0097A7;
}
.footer .site-info a:hover:after {
  -webkit-transform: scale(1);
  -moz-transform: scale(1);
  -ms-transform: scale(1);
  -o-transform: scale(1);
  transform: scale(1);
  opacity: 1;
}

.social .dash {
  position: relative;
  height: 2px;
  display: inline-block;
  width: 18px;
  margin-right: 5px;
  background-color: #757575;
  vertical-align: middle;
}
.social a {
  color: #444;
}
.social a:after {
  content: '';
  position: absolute;
  top: 0px;
  border-bottom: 1px solid;
  border-color: inherit;
  left: 0;
  right: 0;
  opacity: 0;
  -webkit-transition: -webkit-transform 0.2s cubic-bezier(0.4, 0, 0.21, 1.1), opacity 0.2s cubic-bezier(0.4, 0, 0.21, 1.1);
  -moz-transition: -moz-transform 0.2s cubic-bezier(0.4, 0, 0.21, 1.1), opacity 0.2s cubic-bezier(0.4, 0, 0.21, 1.1);
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.21, 1.1), opacity 0.2s cubic-bezier(0.4, 0, 0.21, 1.1);
  -webkit-transform: scale(0);
  -moz-transform: scale(0);
  -ms-transform: scale(0);
  -o-transform: scale(0);
  transform: scale(0);
}
